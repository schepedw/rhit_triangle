<div class = 'row post' data-post-id ="<%=post.id%>">
  <div class = 'col-xs-12'>
    <div class = 'post-metadata'>
      <span class = 'post-author-name'><%= post.author.full_name %></span>
      <span class = 'vertical-divider'> | </span>
      <span class = 'post-created-at' ><%= post.formatted_created_at %></span>
    </div>
    <p class = 'post-content'><%= post.content %></p>
    <div class = 'post-reactions'>
      <a href = 'javscript:void(0);' class = 'like-post'>Like </a>
      <span class = 'vertical-divider'> Â· </span>
      <a href = 'javscript:void(0);' class = 'reply-to-post'> Reply</a>
      <% Array(post.try(:reactions)).each do |reaction| %>
        <span class = 'posted-reactions'> <%= reaction.reaction %> </span>
      <% end %>
    </div>
    <div class = 'post-<%=post.id%>-replies'>
      <% post.replies.each do |reply| %>
        <div class = 'col-xs-11 post-reply'>
          <%= render 'forum/posts/show', post: reply %>
        </div>
      <% end %>
    </div>
  </div>
</div>
