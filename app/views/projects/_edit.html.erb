<div class = 'row project' data-project-id='<%=@project.id%>'>
  <%= form_for @project, remote: true do |f| %>
    <div class = 'col-xs-12 col-md-6 project-pic-container'>

      <div id='project-carousel-<%=@project.description.gsub(' ', '_')%>' class='carousel slide' data-ride='carousel' data-interval='false'>
        <% if @project.pictures.count > 1 %>
          <ol class='carousel-indicators'>
            <li data-target='#project-carousel-<%=@project.description.gsub(' ', '_')%>' data-slide-to='0' class='active'></li>
            <% (1..@project.pictures.count - 1).each do |i| %>
              <li data-target='#project-carousel-<%=@project.description.gsub(' ', '_')%>' data-slide-to='<%=i%>'></li>
            <% end %>
          </ol>
        <% end %>

        <div class='carousel-inner' role='listbox'>
          <div class='item item1 active' style="background-image: url(<%=@project.pictures.first%>)"> </div>
          <% Array(@project.pictures[1..-1]).each_with_index do |picture, i| %>
            <div class='item item<%=i%>' style="background-image: url(<%=picture%>)"></div>
          <% end %>
        </div>

        <% if @project.pictures.count > 1 %>
          <a class='left carousel-control' href='#project-carousel-<%=@project.description.gsub(' ', '_')%>' role='button' data-slide='prev'>
            <span class='fa fa-chevron-left' aria-hidden='true'></span>
            <span class='sr-only'>Previous</span>
          </a>
          <a class='right carousel-control' href='#project-carousel-<%=@project.description.gsub(' ', '_')%>' role='button' data-slide='next'>
            <span class='fa fa-chevron-right' aria-hidden='true'></span>
            <span class='sr-only'>Next</span>
          </a>
        <% end %>
      </div>
    </div>

    <div class = 'col-xs-12 col-md-6 project-description-container'>
      <%= f.text_field :title, placeholder: 'Title', required: 'required' %>
    </div>
    <div class = 'col-xs-12 col-md-6'>
      <%= f.text_area :description, placeholder: 'Description', required: 'required' %>
    </div>
    <div class = 'col-xs-12 col-md-6'>
      <%= f.number_field :price, placeholder: :price, min: 0, required: 'required' %>
    </div>
    <div class = 'col-xs-12 col-md-6'>
      <%= f.submit 'SAVE', class: 'btn btn-primary btn-sm btn-square project-donation' %>
    </div>
  <% end %>
</div>
