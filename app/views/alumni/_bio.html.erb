<div id='<%=title%>' class = 'row' >
  <div class = 'alumni-officer info-container'>
    <div class = 'col-xs-12 col-sm-3 col-md-2 no-left-padding'>
      <div class = 'officer-picture col-sm-12 col-xs-3' style="background-image: url('<%=asset_url("alumni_officers/#{officer.full_name.downcase.gsub(' ', '_')}.png")%>')" >
      </div>
    </div>
    <div class = 'col-xs-12 col-sm-9 col-md-10 info'>
      <span class='officer-name'> <%= officer.full_name.upcase %></span>
      <a class='officer-title' data-toggle="popover"
        tabindex='10'
        title='<%= title.titleize %>'
        data-placement='bottom'
        data-trigger='focus'
        data-content='<%= job_description%>'><%= title.titleize %>
    </a>
      <span class='officer-email'><%= officer.email %></span>
      <span class='officer-phone'><%= officer.phone_number %></span>
      <p    class = 'officer-bio'><%= bio %></p>
    </div>
  </div>
</div>
